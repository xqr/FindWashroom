<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Background"
    tools:context="com.example.findwashroom.MainActivity" >

        <TextView android:id="@+id/maintitle"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#F2F2F2"
            android:textColor="#6F6F6F"
            android:text="@string/main_title" />

        <View android:id="@+id/silver"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/maintitle"
            android:background="@color/silver" />

        <RelativeLayout
                    android:id="@+id/baiduguanggao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
            
        </RelativeLayout>
        
        <ListView 
            android:id="@+id/list_washroom_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/silver"
            android:layout_above="@+id/baiduguanggao"
            android:listSelector="@android:color/transparent"
            android:divider="@null" />

</RelativeLayout>
